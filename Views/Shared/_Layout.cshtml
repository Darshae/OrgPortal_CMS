<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrgPortal_CMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OrgPortal_CMS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/custom.css"/>


</head>
<body class="text-light dark-bg">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 dark-bg">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <button class="btn bg-transparent" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
                            <i class="bi bi-list text-light fs-4"></i>
                        </button>
                    }
                </div>
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">OrgPortal_CMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <form asp-area="identity" asp-page="/Account/Logout" method="post" class="d-inline">
                        <button class="btn btn-warning">Log Out</button>
                    </form>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="main-body">
            @RenderBody()
        </main>
    </div>

    <div class="offcanvas offcanvas-start gray-bg" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Org Portal Menu</h5>
            <button type="button" class="btn-close white-invert" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body p-0">
            <div class="accordion accordion-flush" id="accordionFlush">
                <div class="accordion-item gray-bg">
                    <h2 class="accordion-header text-light">
                        <button class="accordion-button collapsed gray-bg text-light fs-5 border-bottom" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                            Announcement
                        </button>
                    </h2>
                    <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlush">
                        <div class="accordion-body p-0">
                            <ul class="list-group list-group-flush">
                                <a asp-controller="announcement" asp-action="index" class="text-decoration-none">
                                <li class="list-group-item gray-bg text-light ps-4 border-bottom">Home</li>
                                </a>
                                <a asp-controller="announcement" asp-action="CreateAnnouncementForm" class="text-decoration-none">
                                <li class="list-group-item gray-bg text-light ps-4 border-bottom">Create Announcement</li>
                                </a>
                                @if(User.IsInRole("Author"))
                                {
                                    <a asp-controller="announcement" asp-action="getalldrafts" class="text-decoration-none">
                                    <li class="list-group-item gray-bg text-light ps-4 border-bottom">Drafts</li>
                                    </a>
                                }
                                @if (User.IsInRole("Author"))
                                {
                                    <a asp-controller="announcement" asp-action="getallrevisions" class="text-decoration-none">
                                    <li class="list-group-item gray-bg text-light ps-4 border-bottom">Revisions</li>
                                    </a>
                                }
                                @if(User.IsInRole("SuperAdmin"))
                                {
                                    <a asp-controller="announcement" asp-action="GetAllReviews" class="text-decoration-none">
                                    <li class="list-group-item gray-bg text-light ps-4 border-bottom">Reviews</li>
                                    </a>
                                }
                                @if (User.IsInRole("SuperAdmin"))
                                {
                                    <a asp-controller="announcement" asp-action="getallupcoming" class="text-decoration-none">
                                    <li class="list-group-item gray-bg text-light ps-4 border-bottom">Upcoming</li>
                                    </a>
                                }
                                @if (User.IsInRole("SuperAdmin"))
                                {
                                    <a asp-controller="announcement" asp-action="getallpublished" class="text-decoration-none">
                                    <li class="list-group-item gray-bg text-light ps-4 border-bottom">Published Announcements</li>
                                    </a>
                                }
                                <a asp-controller="announcement" asp-action="getAllAnnouncements" class="text-decoration-none">
                                <li class="list-group-item gray-bg text-light ps-4 border-bottom">All Announcements</li>
                                </a>
                            </ul>
                        </div>
                    </div>
                </div>
                @*@<div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                            Accordion Item #2
                        </button>
                    </h2>
                    <div id="flush-collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionFlush">
                        <div class="accordion-body p-0">
                            <ul>
                                <li>Create</li>
                                <li>Edit</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                            Accordion Item #3
                        </button>
                    </h2>
                    <div id="flush-collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionFlush">
                        <div class="accordion-body p-0">
                            <ul>
                                <li>Create</li>
                                <li>Edit</li>
                            </ul>
                        </div>
                    </div>
                </div>*@
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - OrgPortal_CMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
